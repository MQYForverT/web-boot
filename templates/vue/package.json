		"vue": "^3.5.1",
		"vue-router": "^4.4.3"
	},
	"devDependencies": {
		"@mqy/eslint-config": "workspace:^",
		"@mqy/stylelint-config": "workspace:^",
		"@mqy/vite-config": "workspace:^",
		"@vue/test-utils": "^2.4.6",
		"typescript": "^5.5.4",
		"vite": "^5.4.3",
		"vue-tsc": "^2.1.6"
	}
